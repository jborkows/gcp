{
    "steps": [
      {
        "name":"node:17.6.0-alpine",
        "args":[
          "npm","install"
        ],
        "dir": "firebase/my-app"
      },
      {
        "name":"node:17.6.0-alpine",
        "args":[
          "npm","run","build"
        ],
        "dir": "firebase/my-app"
      },
     {
        "name": "gcr.io/${PROJECT_ID}/firebase",
        "args": [
           "deploy",
           "--project",
           "${PROJECT_ID}",
           "--only",
           "hosting"
         ],
         "dir": "firebase"
    }
    ],
    "options":{
        "logging": "CLOUD_LOGGING_ONLY"
    }
    
  }