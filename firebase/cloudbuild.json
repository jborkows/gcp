{
    "steps": [
      {
        "name":"gcr.io/$PROJECT_ID/react-base:1.6",
        "args":[
          "ln","-s", "/my-app/node_modules", "node_modules"
        ],
        "dir": "firebase/my-app"
      },
       {
        "name":"gcr.io/$PROJECT_ID/react-base:1.6",
        "args":[
          "npm", "run","build"
        ],
        "dir": "firebase/my-app"
      },
     {
        "name": "gcr.io/${PROJECT_ID}/firebase",
        "args": [
           "deploy",
           "--project",
           "${PROJECT_ID}",
           "--only",
           "hosting"
         ],
         "dir": "firebase"
    }
    ],
    "options":{
        "logging": "CLOUD_LOGGING_ONLY"
    }
    
  }