{
    "steps": [
      {
        "name":"gcr.io/$PROJECT_ID/react-base:1.4",
        "entrypoint": "/bin/sh",
        "args":[
          "-c", "NODE_PATH=/usr/lib/node_modules:$NODE_PATH npm ci --verbose && NODE_PATH=/usr/lib/node_modules:$NODE_PATH  npm run build"
        ],
        "dir": "firebase/my-app"
      },
     {
        "name": "gcr.io/${PROJECT_ID}/firebase",
        "args": [
           "deploy",
           "--project",
           "${PROJECT_ID}",
           "--only",
           "hosting"
         ],
         "dir": "firebase"
    }
    ],
    "options":{
        "logging": "CLOUD_LOGGING_ONLY"
    }
    
  }